<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.titlehidden">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AppcompatTitleActivity"
            android:label="@string/appcompat_hidden_title" />
        <activity
            android:name=".TitleActivity"
            android:label="@string/activity_hidden_title" />
        <activity
            android:name=".TitleHiddenCommentActivity"
            android:label="@string/title_hidden_comm"
            android:theme="@style/AppTheme.NoTitle" />
        <activity
            android:name=".ActionBarHiddenActivity1"
            android:label="@string/action_bar_hidden" />
        <activity
            android:name=".FullScreenActivity"
            android:label="@string/full_screen"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".NavigationBarHiddenActivity"
            android:label="@string/navigation_hidden" />
    </application>

</manifest>